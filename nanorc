# .nanorc

# Syntax highlighting
include "~/.nano/universal.nanorc"
include "~/.nano/nanorc.nanorc"

include "~/.nano/javascript.nanorc"

include "/usr/share/nano/c.nanorc"
include "/usr/share/nano/sh.nanorc"
include "/usr/share/nano/python.nanorc"
include "/usr/share/nano/java.nanorc"
include "/usr/share/nano/perl.nanorc"

include "/usr/share/nano/html.nanorc"
include "/usr/share/nano/css.nanorc"

# Don't wrap long lines
set nowrap

# Truncate lines at column 80
set fill 80

# Make search case sensitive
set casesensitive

# Ignore whitespace when moving to the start of a line
set smarthome

# Consider punctuation as part of the nearest word
set wordbounds

# Cut from the cursor position to the end of the line
# set cut

# Enable undo!
set undo
